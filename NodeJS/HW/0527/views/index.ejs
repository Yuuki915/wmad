<%- include("_header") %>

<div class="siteimg">
  <!-- <img src="/imgs/top.jpg" alt="top" /> -->
</div>
<p class="site-title">ShareLog</p>

<p class="subtitle">Share a day in your life</p>

<div class="btn-container">
  <button class="btn add-btn"><a href="blogs/new">Add Blog</a></button>
</div>

<div class="blogs">
  <% blogs.forEach(blog => {%>
  <a href="blogs/<%= blog.slug %>" class="read-btn">
    <div class="blog-container">
      <div class="blog">
        <div class="title-auth">
          <div class="blog-title"><%= blog.title %></div>
          <div class="blog-author">@<%= blog.author %></div>
        </div>

        <div class="blog-created-time">
          <%= blog.timeCreated.toLocaleDateString() %>
        </div>
      </div>
    </div>
  </a>
  <% }) %>
</div>

